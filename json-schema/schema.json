{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://jsignell.github.io/zarr/v1.0.0/schema.json#",
  "title": "Zarr Extension",
  "description": "STAC Zarr Extension for STAC Assets.",
  "oneOf": [
    {
      "$comment": "This is the schema for STAC Items. Remove this object if this extension only applies to Collections.",
      "allOf": [
        {
          "$ref": "#/definitions/stac_extensions"
        },
        {
          "type": "object",
          "required": [
            "type",
            "assets"
          ],
          "properties": {
            "type": {
              "const": "Feature"
            },
            "assets": {
              "$comment": "This validates the fields in Item Assets, but does not require them.",
              "type": "object",
              "additionalProperties": {
                "$ref": "#/definitions/fields"
              }
            }
          }
        }
      ]
    },
    {
      "$comment": "This is the schema for STAC Collections.",
      "type": "object",
      "allOf": [
        {
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "const": "Collection"
            }
          }
        },
        {
          "$ref": "#/definitions/stac_extensions"
        }
      ],
      "anyOf": [
        {
          "$comment": "This validates the fields in Collection Assets, but does not require them.",
          "required": [
            "assets"
          ],
          "properties": {
            "assets": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/definitions/require_any_field"
              }
            }
          }
        }
      ]
    }
  ],
  "definitions": {
    "stac_extensions": {
      "type": "object",
      "required": [
        "stac_extensions"
      ],
      "properties": {
        "stac_extensions": {
          "type": "array",
          "contains": {
            "const": "https://jsignell.github.io/zarr/v1.0.0/schema.json"
          }
        }
      }
    },
    "require_any_field": {
      "anyOf": [
        {"required": ["zarr:consolidated"]},
        {"required": ["zarr:node_type"]},
        {"required": ["zarr:zarr_format"]}
      ]
    },
    "fields": {
      "type": "object",
      "properties": {
        "zarr:consolidated": {
          "type": "boolean"
        },
        "zarr:node_type": {
          "enum": ["array", "group"]
        },
        "zarr:zarr_format": {
          "enum": [2, 3]
        }
      },
      "patternProperties": {
        "^(?!zarr:)": {
          "$comment": ""
        }
      },
      "additionalProperties": false
    }
  }
}
